.map
  position absolute
  left 0px
  width 100%
  .demo-popup
    font-family Roboto, sans-serif
    width 268px
    pointer-events none
    b
      margin-left 7px
    ul
      list-style none !important
      margin 0px
      padding 0px
      height 170px
      li
        margin 0px !important
        padding 0px 8px
        height @height
        position relative
        float left
        width 56px
        &.nan
          visibility hidden
        .year
          position absolute
          bottom 0px
          left 0px
          display block
          width 100%
          text-align center
          font-weight 500
        .count
          position absolute
          left 100%
          width 100%
          left 0px
          display block
          text-align center
          font-weight 700
        svg
          position absolute
          bottom 30px
          left 8px
          line
            stroke-width 50
            stroke ColorRed
            stroke-dasharray 1, 1
            shape-rendering crispEdges
  .leaflet-control-zoom a
    color #4 !important
  ul.legend
    position absolute
    top 10px
    right 10px
    z-index 1000
    background white
    border 3px solid #a
    margin 0px !important
    padding 4px 0px 4px 15px !important
    list-style none !important
    border-radius 4px
    li
      padding-left 7px
      margin 0px !important
      float left
      width 100%
      clear both
      input
        float left
        clear both
        position relative
        top 7px
      label
        float left
        display block
        padding 4px 16px 4px 10px
        text-decoration none
        color #0
        font-family 'Roboto'
        cursor pointer
        transition color 0.2s
      input:checked + label
        color desaturate(ColorRed, 50%)
      label:hover
        color ColorRed !important

&.fullscreen
  height 550px
  float left
  width 100%
  margin-top 30px
  border-top 1px solid #a
  border-bottom 1px solid #a
  margin-bottom 30px
  > .map
    width 100%
    height 550px
    position absolute
    left 0px
  &.fullscreen-high
  &.fullscreen-high > .map
    height 550px
  &.fullscreen-high-2
  &.fullscreen-high-2 > .map
    height 670px
